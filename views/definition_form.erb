<form action="/definitions" method="post">
  <input id="word_id" name="word_id" type="hidden" value="<%= @word.id() %>">

  <label for="meaning">Word's meaning:</label>
  <input id="meaning" name="meaning" type="text">

  <label for="speech">Word's part of speech:</label>
  <input id="speech" name="speech" type="text">

  <label for="source">Word's source:</label>
  <input id="source" name="source" type="text">

  <button type="submit">Add definition</button>
</form>
